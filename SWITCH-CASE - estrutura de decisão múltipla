#include <stdio.h>
#include <locale.h>

int main (){
	setlocale(LC_ALL,"");
	
	int diasDaSemana;
    
	printf("Digite um valor de 1 a 7:\n");
	scanf("%d",&diasDaSemana);
	
	
	switch(diasDaSemana){
	
		case 1:
			printf("Domingo.\n");
			break;
    	case 2:
			printf("Segunda.\n");
			break;
		case 3:
			printf("Ter√ßa.\n");
			break;	
    	case 4:
			printf("Quarta.\n");
			break;
    	case 5:
			printf("Quinta.\n");
			break;
    	case 6:
			printf("Sexta.\n");
			break;
    	case 7:
			printf("Sabado.\n");
			break;
    		
    
	} 
    return 0;

}
