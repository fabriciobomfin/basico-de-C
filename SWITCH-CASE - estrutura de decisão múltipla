#include <stdio.h>
#include <locale.h>

int main() {
	setlocale(LC_ALL,"");
	
	int semana;
	
	printf("Digite um número de 1 a 7:\n");
	scanf("%d",&semana); 
	
	switch(semana){ //coloque a variavel dentro dos parenteses
		    
			case 1:
		printf("Domingo.");	
		break;// comando para parar
		
			case 2:
		printf("Segunda.");	
		break;
		
			case 3:
		printf("Terça.");	
		break;
		
			case 4:
		printf("Quarta.");	
		break;
		
			case 5:
		printf("Quinta.");	
		break;
		
			case 6:
		printf("Sexta.");	
		break;
		
			case 7:
		printf("sabado.");	
		break;
		
		default:  // default é como se fosse um -else-,será aplicado quando nunhuma das opções foram selecionadas.
			printf("Digito não identificado.");
	}
	return 0;
	
	
	
	
}
